@model IEnumerable<Mini_Project2.Models.Player>

@{
    ViewData["Title"] = "Comlist";
}

<style>
    /* Add your CSS styles here */
    h1 {
        color: #333;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
    }

    th, td {
        padding: 10px;
        text-align: center;
    }

    th {
        background-color: #333;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #ddd;
    }

    img {
        max-width: 50px;
        max-height: 50px;
    }

    p.team-name {
        font-weight: bold;
        margin: 0;
    }
</style>

@if (Model.Count() == 0)
{
    <h3>해당 선수가 존재하지 않습니다.</h3>
}
else
{
    <table class="table">
        <thead style="background-color:black">
            <tr>
                <th>사진</th>
                <th>이름</th>
                <th>팀</th>
                <th>포지션</th>
                <th>등번호</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.smallimg" alt="선수 이미지"></td>
                    <td>
                        @if (item.position == "COA" || item.position == "DIR")
                        {
                            @Html.DisplayFor(modelItem => item.name)
                        }
                        else
                        {
                            <a asp-action="state" asp-route-id="@item.id">@Html.DisplayFor(modelItem => item.name)</a>
                        }
                    </td>
                    <td>
                        <p class="team-name">
                            @{
                                if (item.team == 1)
                                {
                                    @:인천 흥국생명 핑크스파이더스
                                }
                                else if (item.team == 2)
                                {
                                    @:수원 현대건설 힐스테이트
                                }
                                else if (item.team == 4)
                                {
                                    @:한국도로공사 하이패스 배구단
                                }
                                else if (item.team == 5)
                                {
                                    @:KGC인삼공사 프로배구단
                                }
                                else if (item.team == 6)
                                {
                                    @:GS 칼텍스 서울 Kixx
                                }
                                else if (item.team == 7)
                                {
                                    @:IBK기업은행 알토스
                                }
                                else if (item.team == 8)
                                {
                                    @:페퍼저축은행 AI PEPPERS
                                }
                            }
                        </p>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.position)</td>
                    <td>@Html.DisplayFor(modelItem => item.backnum)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="back-button">
        <a asp-action="Ser">돌아가기</a>
    </div>
}
